<Window x:Class="SampleSolutionWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SampleSolutionWpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="50"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        
        <Button Name="loginButton"
                Grid.Row="0">Login</Button>
        <Button Name="queryButton"
                Grid.Row="1"
                Margin="0, 10">Query</Button>
        <Border Margin="5" Grid.Row="2" BorderBrush="Gray" BorderThickness="2" Grid.ColumnSpan="2">
            <TextBlock Name="resultBox" />
        </Border>
    </Grid>
</Window>
